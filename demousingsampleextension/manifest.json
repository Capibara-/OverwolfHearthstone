{
  "manifest_version": 1,
  "type": "WebApp",
  "permissions": [ "Extensions", "Hotkeys", "GameInfo", "Logging" ],
  "meta": {
    "name": "Ninja App",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.77.10",
    "author": "Developer Name",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "description": "Hearthstone Demo"
  },
  "data": {
    "start_window": "PlayerWindow",

    "windows": {
      "PlayerWindow": {
        "file": "Files/index.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 400,
          "height": 300
        },
        "min_size": {
          "width": 110,
          "height": 1000
        },
        "max_size": {
          "width": 110,
          "height": 1000
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      },
      "OpponentWindow": {
        "file": "Files/index.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 400,
          "height": 300
        },
        "min_size": {
          "width": 110,
          "height": 1000
        },
        "max_size": {
          "width": 110,
          "height": 1000
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      }
    },
    "extra-objects": {
      "sampleLibrary": {
        "file": "Files/lib/SampleOverwolfExtensionLibrary.dll",
        "class": "SampleOverwolfExtensionLibrary.SampleOverwolfExtension"
      }
    }
  }
}